@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            @if (User.IsInRole("Admin")) {
            <li id="dropdown-id" class="dropdown">
                <a id="dropdown-toggle-id" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Usuarios<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Usuarios", "Index", "Account")</li>
                    <li>@Html.ActionLink("Usuarios ATM", "IndexAtmUser", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                </ul>
            </li>
            }
            <li>
                @Html.ActionLink("User " + User.Identity.GetUserName().Split('@')[0], "Manage", "Account", null, new {title = "Manage"})
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li id="showModal"><a href="#">Log In</a></li>
    </ul>
}
<div id="modal_PartialLogin_id" class="modal fade" style="background-color:rgba(0, 0, 0, 0.50);">
</div>
